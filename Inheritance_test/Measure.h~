//=================================
// include guard
#ifndef __MEASURE_H_INCLUDED__
#define __MEASURE_H_INCLUDED__

//=================================
// forward declared dependencies
class Measure{
   public:
      void setNumber(int n) { 
         number = n; 
      }
      
      int getNumber(){
        return number;
      }
      
   protected:
        int number;
};

#endif // __MEASURE_H_INCLUDED__ 
